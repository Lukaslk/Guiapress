<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<body>
    <hr>
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4">Olá, mundo!</h1>
            <p class="lead">Este é um simples blog.</p>
            <hr class="my-4">
            <p>Um blog similar ao sistema wordpress</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <hr>
        <% articles.forEach(article => { %>
            <% categories.forEach(category => { %>
           <div class="card">
                <div class="card-header">
                    <% if(article.categoryId == category._id) { %>
                    <h2><%= article.title %></h2>
                    <% } %>
                </div>
                <div class="card-body">
                    <a href="/article/<%= article._id %>" class="btn btn-success">Ler artigo</a>
                </div>
           </div>
           <br>
        <% }) %><% }) %>
        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/0" style="float: right">Next >></a>
            </div>
            <hr>
        </div>
        <hr>

    </div>
</body>

<%- include('./partials/footer.ejs') %>